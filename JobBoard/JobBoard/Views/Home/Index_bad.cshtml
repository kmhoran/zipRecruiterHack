@{
    Layout = "~/Views/Shared/_SeekerLayout.cshtml";
    ViewBag.Title = "Home Page";

}

<header>
    <div class="container" id="maincontent" tabindex="-1">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="img/profile.png" alt="">
                <div class="intro-text">
                    <h1 class="name">Junior Developers</h1>
                    <hr class="star-light">
                    <span class="skills">Find Your Next Position</span><br>
                    <span class="skills">Front-End - Back-End - FullStack</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Portfolio</h2>
                <h4>Create a Profile to Display Your Skills</h4>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 portfolio-item row">

                <div style="color: lightgrey">
                    <h1>Pedro Ramirez</h1>
                    <img src="img/profileSample.jpg" class="img-responsive" alt="Cabin">
                    <div class="col-sm-10">
                        <h1>Biography</h1>
                        <p>I am a back-end dev with a degree in Computer Science</p>
                        <h1>Experience</h1>
                        <p>I have one year experience working in back end development</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 portfolio-item row">

                <div style="color: lightgrey">
                    <h2>Top 3 Code Samples</h2>
                    <div class="col-sm-10">
                        <p>Java</p>
                        <img src="http://fabacademy.org/archives/2012/students/chibire.terence/images/samplecode_1.PNG" class="img-responsive"><hr>
                        <p>PHP</p>
                        <img src="http://www.tapkaa.com/wp-content/uploads/2013/02/Sample-Pre-Paid-SIM-Card-Class-to-teach-C++-Inheritance.png" class="img-responsive"><hr>
                        <p>C#</p>
                        <img src="https://www.phpclasses.org/browse/view/image/format/screenshot/file/36680/name/paypal-php-class-library-get-balance-code-sample.jpg" class="img-responsive">
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div style="color: lightgrey">
                    <h1>Accolades</h1>
                    <button class="btn btn-disabled phpAcc">PHP</button>
                    <button class="btn btn-disabled rubyAcc">Ruby</button>
                    <button class="btn btn-disabled">C#</button>
                    <button class="btn btn-disabled">HTML</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="success" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>What Makes Us Different</h2>
                <hr class="star-light">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-2">
                <h2>For Junior Developers</h2>
                <p></p>
            </div>
            <div class="col-lg-4">
                <h2>For Employers</h2>
                <p></p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Create An Account</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" id="email" required data-validation-required-message="Please enter your email address.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label for="phone">Phone Number</label>
                            <input type="tel" class="form-control" placeholder="Phone Number" id="phone" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <button type="submit" class="btn btn-success btn-lg">Create Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>